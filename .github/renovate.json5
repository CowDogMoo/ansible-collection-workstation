{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  gitAuthor: 'cowdogmoo-renovate-bot <157187596+cowdogmoo-renovate-bot[bot]@users.noreply.github.com>',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':enablePreCommit',
    ':automergeDigest',
    'helpers:pinGitHubActionDigests',
  ],
  dependencyDashboardLabels: [
    'renovate-dashboard',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  commitBodyTable: true,
  labels: [
    'renovate',
  ],
  'pre-commit': {
    enabled: true,
  },
  packageRules: [
    {
      description: 'Auto merge Galaxy dependencies',
      matchDatasources: [
        'galaxy',
      ],
      automerge: true,
      automergeType: 'pr',
      matchUpdateTypes: [
        'digest',
      ],
    },
    {
      description: 'Auto-merge GitHub Actions',
      matchManagers: [
        'github-actions',
      ],
      matchDatasources: [
        'github-tags',
      ],
      automerge: true,
      automergeType: 'pr',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
    },
    {
      description: 'Group Ansible Galaxy dependencies',
      matchManagers: [
        'ansible-galaxy',
      ],
      groupName: 'ansible-dependencies',
    },
  ],
  ansible: {
    managerFilePatterns: [
      '/^requirements\\.yml$/',
      '/^roles/[^/]+/meta/main\\.yml$/',
      '/^galaxy\\.yml$/',
    ],
  },
  customManagers: [
    // For golang - GitHub uses tags like "go1.21.5"
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>golang)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.*)$"
    },

    // For python - GitHub uses tags like "v3.12.0"
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>python)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },

    // For ruby - GitHub uses tags like "v3_3_0" but values in YAML are "3.3.0"
    // This is tricky because the version format differs between tags and YAML
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>ruby)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "ruby/ruby",
      "extractVersionTemplate": "^v(?<version>\\d+_\\d+_\\d+)$",
      "versioningTemplate": "regex:^(?<major>\\d+)_(?<minor>\\d+)_(?<patch>\\d+)$"
    },

    // For kubectl - GitHub uses tags like "v1.29.0"
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>kubectl)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "kubernetes/kubernetes",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },

    // For packer - GitHub uses tags like "v1.10.0"
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>packer)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "hashicorp/packer",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },

    // For helm - GitHub uses tags like "v3.14.0"
    {
      "customType": "regex",
      "fileMatch": ["^roles/asdf/defaults/main\\.yml$"],
      "matchStrings": [
        "- name: (?<depName>helm)\\n\\s+version: [\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "helm/helm",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
  ]
}