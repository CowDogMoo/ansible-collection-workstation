{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  gitAuthor: 'cowdogmoo-renovate-bot <157187596+cowdogmoo-renovate-bot[bot]@users.noreply.github.com>',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':enablePreCommit',
    ':automergeDigest',
    'helpers:pinGitHubActionDigests',
  ],
  dependencyDashboardLabels: [
    'renovate-dashboard',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  commitBodyTable: true,
  labels: [
    'renovate',
  ],
  'pre-commit': {
    enabled: true,
  },
  packageRules: [
    {
      description: 'Auto merge Galaxy dependencies',
      matchDatasources: [
        'galaxy',
      ],
      automerge: true,
      automergeType: 'pr',
      matchUpdateTypes: [
        'digest',
      ],
    },
    {
      description: 'Auto-merge GitHub Actions',
      matchManagers: [
        'github-actions',
      ],
      matchDatasources: [
        'github-tags',
      ],
      automerge: true,
      automergeType: 'pr',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
    },
    {
      description: 'Group Ansible Galaxy dependencies',
      matchManagers: [
        'ansible-galaxy',
      ],
      groupName: 'ansible-dependencies',
    },
  ],
  ansible: {
    managerFilePatterns: [
      '/^requirements\\.yml$/',
      '/^roles/[^/]+/meta/main\\.yml$/',
      '/^galaxy\\.yml$/',
    ],
  },
  customManagers: [
    // For golang - tags are like "go1.21.5"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+golang\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.*)$",
      "versioningTemplate": "semver"
    },

    // For python - tags are like "v3.12.0"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+python\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    },

    // For ruby - tags are like "v3_3_0"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+ruby\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "ruby/ruby",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "regex:^(?<major>\\d+)_(?<minor>\\d+)_(?<patch>\\d+)$"
    },

    // For kubectl - tags are like "v1.29.0"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+kubectl\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "kubernetes/kubernetes",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    },

    // For packer - tags are like "v1.10.0"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+packer\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "hashicorp/packer",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    },

    // For helm - tags are like "v3.14.0"
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^roles/asdf/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "(?m)^\\s+-\\s+name:\\s+helm\\s+version:\\s+[\"']?(?<currentValue>[0-9\\.]+)[\"']?"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "helm/helm",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    },
  ]
}